<h3>Edit Products</h3>
<div class="row">
  <div class="section">
  <% @products.each do |product| %>
  <div class="col s4">

    <div id="product<%= product.id %>">
      <div class="">
        <div class="">
          <h4><%= product.name %></h4>

        </div>
        <div id="product">
          <p><%= product.description %></p>
          <p><%= number_to_currency product.price %></p>

          <% if admin %>
            <%= form_for product do |f| %>
              Name: <%= f.text_field :name %>
              Description: <%= f.text_field :description %>
              Price: <%= f.text_field :price, data: {autonumeric: {vMin: 0.00}}  %>

            <%= f.submit "Submit" %>

          <% end %>
          <% end %>

          <% if admin %>
          <h5><%= link_to "Delete", product_path(product),
                        :data => {:confirm => "Confirm Product Deletion?",
                                  :method => "delete"} %></h5>
            <% end %>
        </div>

      </div>
    </div>
  </div>

  <% end %>
</div>
</div>
